#!/usr/bin/env bash

CATEGORIES=(
    "PROGRAMMING"
    "RESEARCHING"
    "PRODUCTIVITY_IMPROVEMENT"
    "WASTED"
    "DONE"
)
selected=$(printf "%s\n" "${CATEGORIES[@]}" | sk --margin 30% --color="bw" --margin=25%,25%,25%,35%)

if [[ "$selected" == "DONE" ]]; then
    timew stop
		tmux set -g status-right ""
else
    timew start "$selected"
		tmux set -g status-right "$selected "
fi
