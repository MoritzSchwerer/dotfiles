#!/bin/sh

# setup displays
# get the display that is not the eDP
DISPLAYS=$(xrandr | grep " connected" | awk '{ print $1 }')
OTHER_DISPLAY=$(echo "$DISPLAYS" | grep -v "eDP")
xrandr --output "$OTHER_DISPLAY" --primary --mode 1920x1080 --pos 0x0

xrandr --output eDP --off

# set wallpaper
# feh --bg-fill ~/.config/wallpapers/docked/DeepWorkBackground.png
feh --bg-fill ~/.config/wallpapers/docked/default.png
